import { Date, DatePickerPopup, Button, VerticalBox } from "std-widgets.slint";

export global Data {
    in-out property <int> today: 23;
    in-out property <int> this_month: 12;
    in-out property <int> this_year: 2001;
}

component SalaryTab inherits Rectangle {
    width: 800px;
    height: 600px;

    callback add_salary(string, int);

    date-picker := DatePickerPopup {
        property <Date> test_date;
        
        width: 360px;
        height: 524px;
        close-on-click: false;
        title: "Select the date of Salary";
        // date: test_date;

        accepted(date) => {
            date-picker.close();
            date_text.text =  date.day + "//" + date.month + "//" + date.year;
        }
    }

    VerticalLayout {
        Rectangle {
            Button {
                text: "<-";
                y: 0px;
                x: 0px;
                width: 60px;
                height: 60px;
            }
            Button {
                text: "save";
                y: 0px;
                x: parent.width - 60px;
                width: 60px;
                height: 60px;

                clicked => {
                    root.add_salary("1234", 1234);
                }
            }
        }
        HorizontalLayout {
            Rectangle {
                height: 60px;
                date_text := TextInput {
                    width: 60px;
                    height: 60px;
                    text: "DD/MM/YYYY";
                }
                TouchArea {
                    clicked => {
                        date_picker.show();
                    }
                }
            }

            amount := TextInput {
                height: 60px;
                text: "Amount";
            }

            add := Button {
                height: 60px;
                text: "Add";
            }
        }
    }
}



component HomeView inherits Rectangle {
    width: 800px;
    height: 600px;

    callback enter_salary();
    callback enter_debt();

    GridLayout {
        spacing: 100px;
        Button {
            width: 100px;
            height: 100px;
            text: "Enter Salary";

            clicked => {
                root.enter_salary();
            }
        }
        Button {
            width: 100px;
            height: 100px;
            text: "Debt";

            clicked => {
                root.enter_debt();
            }
        }
    }
}

export component AppWindow inherits Window {
    width: 800px;
    height: 600px;

    callback add_salary(string, int);

    salary := SalaryTab {
        visible: false;

        add_salary(date_set, salary_set) => {
            root.add_salary(date_set, salary_set);
        }
    }

    debt := DebtTab {
        visible: false;
    }

    homeview := HomeView {
        enter_salary => {
            self.visible = false;
            salary.visible = true;
        }

        enter_debt => {
            self.visible = false;
            debt.visible =  true;
        }
    }
}

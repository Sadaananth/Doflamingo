import { Button } from "std-widgets.slint";

export component HomeView inherits Rectangle {
    callback enter_overview();
    callback enter_salary();
    callback enter_expense();
    callback enter_debt();
    callback enter_about();

    HorizontalLayout {
        VerticalLayout {
            width: 100px;
            Button {
                height: 100px;
                text: "Overview";

                clicked => {
                    root.enter_overview();
                }
            }
            Button {
                height: 100px;
                text: "Salary";
                // TODO: change this to income

                clicked => {
                    root.enter_salary();
                }
            }
            Button {
                height: 100px;
                text: "Expense";

                clicked => {
                    root.enter_expense();
                }
            }
            Button {
                height: 100px;
                text: "Debt";

                clicked => {
                    root.enter_debt();
                }
            }
            Button {
                height: 100px;
                text: "About";

                clicked => {
                    root.enter_about();
                }
            }
        }
        Rectangle {}
    }
}
